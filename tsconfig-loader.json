{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "allowJs": true
  },
  "exclude": [
    "src/**/*.ts!(scvo-loader.ts)"
  ],
  "include": [
    "src/scvo-loader.ts"
  ]
}
